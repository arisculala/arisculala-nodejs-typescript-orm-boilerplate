{
  "name": "arisculala-nodejs-typescript-orm-boilerplate",
  "version": "0.0.1",
  "description": "Boiler plate project for nodejs, typescript, orm using postgresql",
  "private": true,
  "main": "dist/index.js",
  "engines": {
    "node": ">=14 <18"
  },
  "scripts": {
    "start": "node dist/index.js",
    "prebuild": "rm -rf dist",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "dev": "npm run format && npm run build && node dist/index.js"
  },
  "author": "arisculala",
  "license": "GPL-3.0",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.5",
    "express": "^4.17.1",
    "express-validation": "^4.1.0",
    "http-graceful-shutdown": "^3.1.13",
    "joi": "^17.12.3",
    "pg": "^8.11.5",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.20",
    "uuid": "^9.0.1",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.11",
    "@types/pg": "^8.11.4",
    "@types/uuid": "^9.0.8",
    "prettier": "^3.2.5",
    "typescript": "^4.5.2"
  }
}
